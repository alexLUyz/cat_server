<%- include("../partials/header") %>

    <div class="container">

        <div class="row">
            <h1 style="text-align: center">Send a Post of Your Cat</h1>

            <div style="width: 30%; margin: 25px auto">

                <form action="/cats/<%=cat%>/posts" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="content" placeholder="Content">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Post!</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
    <%- include("../partials/footer") %>